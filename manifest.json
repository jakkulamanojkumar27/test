{
    "manifest_version": 3,
    "name": "Web Action Recorder",
    "version": "1.1",
    "description": "Record web actions and generate Playwright scripts",
    "permissions": [
      "activeTab",
      "scripting",
      "sidePanel",
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "Web Action Recorder"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }